.header
  .header__box
    .header__box__1
      .header__box__1__title-box
        .header__box__1__title-box__title
          = link_to root_path do
            = image_tag 'logo/logo.png', height: '40px', width: '140px'
          
      .header__box__1__search-box
        = search_form_for(@q, url: products_path) do |f|
          = f.search_field :product_name_cont
          = f.submit    
    .header__box__2
      .header__box__2__content
        %ul
          %li
            = link_to categorys_path do
              カテゴリー
            
          %li
            = link_to products_path do
              ブランド
      .header__box__2__login
        %ul
          %li
            -if user_signed_in? 
              = link_to users_path do
                マイページ
              = link_to "ログアウト", destroy_user_session_path, method: :delete
            -else
              = link_to "新規登録", new_user_path
              = link_to "ログイン", new_user_session_path
