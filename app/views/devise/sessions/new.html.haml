= render "products/header"
.signup_page
  .new_title ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post, id: "facebook"
    = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, id: "google"
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email" , class: "input_box"
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password" , class: "input_box"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "ログイン", class: "red_btn"
= render "products/footer"
